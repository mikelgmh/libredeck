{
  "branches": [
    "master"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "libredeck-cli-v*-linux-x64",
            "label": "CLI Linux x64"
          },
          {
            "path": "libredeck-cli-v*-windows-x64.exe",
            "label": "CLI Windows x64"
          },
          {
            "path": "libredeck-cli-v*-darwin-x64",
            "label": "CLI macOS x64"
          },
          {
            "path": "libredeck-daemon-v*-linux-x64",
            "label": "Daemon Linux x64"
          },
          {
            "path": "libredeck-daemon-v*-windows-x64.exe",
            "label": "Daemon Windows x64"
          },
          {
            "path": "libredeck-daemon-v*-darwin-x64",
            "label": "Daemon macOS x64"
          },
          {
            "path": "LibreDeck-Setup-v*.exe",
            "label": "Windows Installer"
          }
        ]
      }
    ]
  ]
}