{
  "name": "libredeck",
  "version": "0.1.0",
  "description": "LibreDeck - Open Source StreamDeck Alternative",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:daemon\" \"npm run dev:web\"",
    "dev:daemon": "cd daemon && bun run dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:daemon && npm run build:web && npm run build:cli",
    "build:daemon": "cd daemon && bun run build",
    "build:web": "cd web && npm run build",
    "build:cli": "cd cli && bun run build",
    "install:all": "npm run install:daemon && npm run install:web && npm run install:cli",
    "install:daemon": "cd daemon && bun install",
    "install:web": "cd web && npm install",
    "install:cli": "cd cli && bun install",
    "start": "cd daemon && bun run start",
    "test": "npm run test:daemon && npm run test:web",
    "test:daemon": "cd daemon && bun test",
    "test:web": "cd web && npm run test",
    "lint": "npm run lint:daemon && npm run lint:web",
    "lint:daemon": "cd daemon && npm run lint",
    "lint:web": "cd web && npm run lint",
    "clean": "rm -rf daemon/dist web/dist cli/dist data/db.sqlite*"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "streamdeck",
    "automation",
    "dashboard",
    "open-source"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/LibreDeck.git"
  },
  "author": "",
  "license": "MIT"
}